: ${JREP_JAR:=@jardir@/jrep-@jar_version@.jar}
: ${JREP_JAVA_OPTS:=}
: ${JREP_JAVA:=java}
: ${JREP_JNI_DIR:=@libdir@}

export JREP_VERSION=@version@

${JREP_JAVA} -Djava.library.path="$JREP_JNI_DIR" \
	      -cp "$JREP_JAR" $JREP_JAVA_OPTS com.cheusov.Jrep "$@"
